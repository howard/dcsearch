<div class="logo">
  <img src="/images/logo.jpg" alt="logo" />
</div>

<div id="search_form">
  <% form_for :query, :url => '/results', :html => {:method => :get} do |q| %>
  	<%= q.text_field :term, :size => 50 %>
  	<%= submit_tag "Search..." %><br />
  	<%= q.check_box :files?, :checked => true %>
  	  <%= q.label :files?, "Files" %>
  	<%= q.check_box :folders?, :checked => false, :disabled => true %>
  	  <%= q.label :folders?, "Folders" %>
  	<%= q.check_box :users?, :checked => false, :disabled => true %>
  	  <%= q.label :users?, "Users" %>
  <% end %>
</div>